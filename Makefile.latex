TEX		= tex
LATEX		= pdflatex
MAKEINDEX	= makeindex
BIBTEX		= bibtex
DVIPS		= dvips
GS		= gs
GNUPLOT		= gnuplot
MF		= mf
GFTOPK		= gftopk

MAKEINDEX.idx	= $(MAKEINDEX) $(MAKEINDEXFLAGS)
MAKEINDEXGST	= makeindex.gst
MAKEINDEXIST	= makeindex.ist
MAKEINDEXFLAGS	= -s makeindex.ist -g -l
PAPER		= a4
RES1		= 300
RES2		= 600
DOPLOT		= doplot

define tex
$(RM) $@
$(TEX) $<
endef

define latex
$(RM) $@
$(LATEX) $<
endef

define dvips
$(RM) $@
$(DVIPS) -t $(PAPER) $< -o $@
endef

define gnuplot
$(RM) $@
@echo set terminal mf > gnuplot.do
@echo set output '"'$@'"' >> gnuplot.do
@cat $< >> gnuplot.do
@echo cp $< gnuplot.do
$(GNUPLOT) < gnuplot.do
$(RM) gnuplot.do
endef

define mf
$(RM) $@
$(MF) '\mode=localfont; \mag=1; input $<'
endef

define gftopk
$(RM) $@
$(GFTOPK) $<
endef

define makeindex
$(MAKEINDEX) $(MAKEINDEXFLAGS) $<
endef

%.pdf:		%.tex
		$(latex)

%.mf:		%.$(DOPLOT)
		$(gnuplot)

%.$(RES1)gf:	%.mf
		$(mf)
		mv $(<:%.mf=%.$(RES2)gf) $@

%.$(RES1)pk:	%.$(RES1)gf
		$(gftopk)

%.$(RES2)gf:	%.mf
		$(mf)

%.$(RES2)pk:	%.$(RES2)gf
		$(gftopk)

%.idx:		%.tex
		$(latex)

%.ind:		%.idx
		$(makeindex)

